{{> customer_navbar}}

<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Pembayaran</h1>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-medium text-gray-900 mb-4">Ringkasan Pesanan</h2>
                <div class="space-y-4">
                    {{#each cart.items}}
                    <div class="flex justify-between">
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">{{this.product.name}}</p>
                            <p class="text-sm text-gray-500">Qty: {{this.quantity}} × {{formatPrice this.product.price}}</p>
                        </div>
                        <div class="text-sm font-medium text-gray-900">
                            {{formatPrice (multiply this.product.price this.quantity)}}
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="border-t border-gray-200 mt-4 pt-4">
                    <div class="flex justify-between">
                        <p class="text-lg font-medium text-gray-900">Total</p>
                        <p class="text-lg font-bold text-gray-900">{{formatPrice total}}</p>
                    </div>
                </div>
            </div>

            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-medium text-gray-900 mb-4">Informasi Pengiriman</h2>
                <form action="/orders/checkout" method="POST" class="space-y-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Nama Lengkap</label>
                        <input type="text" id="name" value="{{user.name}}" disabled
                               class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" value="{{user.email}}" disabled
                               class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50">
                    </div>
                    <div>
                        <label for="shippingAddress" class="block text-sm font-medium text-gray-700">Alamat Pengiriman *</label>
                        <textarea id="shippingAddress" name="shippingAddress" rows="3" required
                                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">{{user.address}}</textarea>
                    </div>

                    <div class="pt-4">
                        <button type="submit" 
                                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-md">
                            Tempatkan Pesanan
                        </button>
                        <a href="/cart" class="block text-center mt-3 text-sm text-gray-600 hover:text-gray-800">
                            ← Kembali ke Keranjang
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
