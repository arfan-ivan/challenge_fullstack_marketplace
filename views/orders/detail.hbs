{{> customer_navbar}}

<div class="max-w-5xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="mb-6">
            <a href="/orders" class="text-blue-600 hover:text-blue-800 text-sm">‚Üê Kembali ke Pesanan</a>
        </div>

        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-5 border-b border-gray-200">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Pesanan #{{order.id}}</h1>
                        <p class="text-sm text-gray-500 mt-1">Dipesan pada {{formatDate order.createdAt}}</p>
                    </div>
                    <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full 
                                 {{#if (eq order.status 'completed')}}bg-green-100 text-green-800
                                 {{else if (eq order.status 'processing')}}bg-blue-100 text-blue-800
                                 {{else if (eq order.status 'cancelled')}}bg-red-100 text-red-800
                                 {{else}}bg-yellow-100 text-yellow-800{{/if}}">
                        {{order.status}}
                    </span>
                </div>
            </div>

            <div class="px-6 py-5">
                <h2 class="text-lg font-medium text-gray-900 mb-4">Item Pesanan</h2>
                <div class="space-y-4">
                    {{#each order.items}}
                    <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                        {{#if this.product.imageUrl}}
                        <img src="{{this.product.imageUrl}}" alt="{{this.product.name}}" class="w-20 h-20 object-cover rounded">
                        {{else}}
                        <div class="w-20 h-20 bg-gray-200 rounded flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                        </div>
                        {{/if}}
                        <div class="flex-1">
                            <h3 class="text-sm font-medium text-gray-900">{{this.product.name}}</h3>
                            <p class="text-sm text-gray-500">Seller: {{this.product.seller.name}}</p>
                            <p class="text-sm text-gray-500">Quantity: {{this.quantity}}</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm text-gray-500">{{formatPrice this.price}} each</p>
                            <p class="text-lg font-medium text-gray-900">{{formatPrice (multiply this.price this.quantity)}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <div class="mt-6 border-t border-gray-200 pt-6">
                    <div class="flex justify-between text-lg font-medium">
                        <span class="text-gray-900">Total Jumlah</span>
                        <span class="text-gray-900">{{formatPrice order.totalAmount}}</span>
                    </div>
                </div>
                <h2 class="text-lg font-medium text-gray-900 mb-4">Informasi Pengiriman</h2>
                <div class="space-y-2">
                    <p class="text-sm text-gray-700"><strong>Nama:</strong> {{order.user.name}}</p>
                    <p class="text-sm text-gray-700"><strong>Email:</strong> {{order.user.email}}</p>
                    <p class="text-sm text-gray-700"><strong>Alamat:</strong></p>
                    <p class="text-sm text-gray-600 ml-4 whitespace-pre-line">{{order.shippingAddress}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
