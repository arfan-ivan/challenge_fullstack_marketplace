
{{> customer-navbar}}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">My Orders</h1>

        {{#if orders.length}}
        <div class="space-y-4">
            {{#each orders}}
            <div class="bg-white shadow rounded-lg p-6">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-lg font-medium text-gray-900">Order #{{this.id}}</h3>
                        <p class="text-sm text-gray-500">{{formatDate this.createdAt}}</p>
                    </div>
                    <div class="text-right">
                        <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full 
                                     {{#if (eq this.status 'completed')}}bg-green-100 text-green-800
                                     {{else if (eq this.status 'processing')}}bg-blue-100 text-blue-800
                                     {{else if (eq this.status 'cancelled')}}bg-red-100 text-red-800
                                     {{else}}bg-yellow-100 text-yellow-800{{/if}}">
                            {{this.status}}
                        </span>
                        <p class="text-lg font-bold text-gray-900 mt-2">{{formatPrice this.totalAmount}}</p>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-4">
                    <p class="text-sm text-gray-700 mb-3"><strong>Items:</strong> {{this.items.length}} product(s)</p>
                    <div class="space-y-2">
                        {{#each this.items}}
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">{{this.product.name}} × {{this.quantity}}</span>
                            <span class="text-gray-900">{{formatPrice (multiply this.price this.quantity)}}</span>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="mt-4">
                    <a href="/orders/{{this.id}}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                        View Details →
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="bg-white shadow rounded-lg p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">No orders yet</h3>
            <p class="mt-1 text-sm text-gray-500">Start shopping to create your first order.</p>
            <div class="mt-6">
                <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md text-sm font-medium">
                    Start Shopping
                </a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
                