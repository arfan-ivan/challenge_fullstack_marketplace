{{> navbar}}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="mb-6">
            <a href="/admin/sellers" class="text-blue-600 hover:text-blue-800 text-sm">‚Üê Kembali ke Penjual</a>
        </div>

        <div class="bg-white shadow rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex justify-between items-start mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">{{seller.name}}</h2>
                    <div class="space-x-2">
                        <a href="/admin/sellers/{{seller.id}}/edit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                            Edit
                        </a>
                        <form action="/admin/sellers/{{seller.id}}/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                                Hapus
                            </button>
                        </form>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Email</h3>
                        <p class="mt-1 text-sm text-gray-900">{{seller.email}}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Telepon</h3>
                        <p class="mt-1 text-sm text-gray-900">{{seller.phone}}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Alamat</h3>
                        <p class="mt-1 text-sm text-gray-900">{{seller.address}}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Terdaftar</h3>
                        <p class="mt-1 text-sm text-gray-900">{{formatDate seller.createdAt}}</p>
                    </div>
                    {{#if seller.description}}
                    <div class="md:col-span-2">
                        <h3 class="text-sm font-medium text-gray-500">Deskripsi</h3>
                        <p class="mt-1 text-sm text-gray-900">{{seller.description}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Produk ({{seller.products.length}})</h3>
                
                {{#if seller.products.length}}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kategori</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Harga</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stok</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each seller.products}}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">{{this.name}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">{{this.category}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{formatPrice this.price}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">{{this.stock}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <a href="/admin/products/{{this.id}}" class="text-blue-600 hover:text-blue-900">Lihat</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <p class="text-gray-500 text-center py-4">Belum ada produk</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>